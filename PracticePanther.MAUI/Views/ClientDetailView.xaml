<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticePanther.MAUI.Views.ClientDetailView"
             Title="New Client"
             Background="#95afc0">
             
    <VerticalStackLayout>
        <Grid Padding="20" ColumnSpacing ="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="44"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Label Grid.Column="0"
            Grid.Row="0"
            FontSize="23"
            Text="Name"
            HorizontalOptions="Center"
            FontAttributes="Bold"
             
                     />
            <Entry Grid.Column="1"
                   Background="White"
                   TextColor="Black"
                   
                   />
        </Grid>


    </VerticalStackLayout>
</ContentPage>