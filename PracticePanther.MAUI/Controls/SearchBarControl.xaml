<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PracticePanther.MAUI.Controls.SearchBarControl">
    <VerticalStackLayout>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Entry Grid.Column="0" Text="{Binding QueryText}"  TextColor="Black"
                    BackgroundColor="White"></Entry>
            <Button Grid.Column="1" 
                    Text="{Binding SearchButtonText}"
                    BackgroundColor="#686de0"
                    TextColor="White"
                    Command="{Binding SearchCommand}"></Button>
        </Grid>
    </VerticalStackLayout>
</ContentView>